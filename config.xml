<?xml version='1.0' encoding='utf-8'?>
<widget id="com.znltapp.demo" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>智能揽投</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <preference name="loadUrlTimeoutValue" value="120000" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="bdapp://*/*" />
    <allow-intent href="baidumap://*/*" />
    <platform name="android">
        <icon density="ldpi" src="icon/android/icon-36-ldpi.png"/>
        <icon density="mdpi" src="icon/android/icon-48-ldpi.png"/>
        <icon density="hdpi" src="icon/android/icon-72-ldpi.png"/>
        <icon density="xhdpi" src="icon/android/icon-96-ldpi.png"/>
        <icon density="xxhdpi" src="icon/android/icon-144-ldpi.png"/>
        <icon density="xxxhdpi" src="icon/android/icon-192-ldpi.png"/>
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
